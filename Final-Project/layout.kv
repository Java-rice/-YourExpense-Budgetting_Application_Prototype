<LogoScreen>:
	name: "Logo_Page"
	id: Logopage
	MDFloatLayout:
		Image: 
			source: "assets/app_bg.png"
			size_hint: 1, 1
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		Image:
			source: "assets/App_logo.png"
			size_hint: 0.4, 0.4
			pos_hint: {'center_x': 0.5, 'center_y': 0.7}
		Image:
			source: "assets/App_name.png"
			size_hint: .7, .7
			pos_hint: {'center_x': 0.5, 'center_y': 0.55}
		Label:
			text: "We keep you from \n going broke"
			pos_hint: {'center_x': 0.5, 'center_y': 0.47}
			halign: 'center'
			color: 255/255, 255/255, 255/255
			font_size: "20sp"
			font_name: "LatoB"
		Label:
			text: "In Partnership with Banco De Oro "
			pos_hint: {'center_x': 0.5, 'center_y': 0.1}
			halign: 'center'
			color: 255/255, 255/255, 255/255
			font_size: "12sp"
			font_name: "LatoB"

