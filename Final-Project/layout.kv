<LoginScreen>:
	name: "Login_Screen"
	id: Login
	MDFloatLayout
		Image: 
			source: "assets/blue_bg.png"
			size_hint: 1, 1
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		Image:
			source: "assets/App_logo.png"
			size_hint: 0.4, 0.4
			pos_hint: {'center_x': 0.5, 'center_y': 0.8}
		Label:
			text: "LOGIN"
			pos_hint: {'center_x': 0.5, 'center_y': 0.65}
			halign: 'center'
			color: 0/255, 0/255, 0/255
			font_size: "27sp"
			font_name: "LatoB"
		MDRaisedButton:
    		text: "Log In"
    		font_size: '15dp'
    		text_color: 0/255, 0/255, 0/255
    		padding: [80, 3]
    		font_name: "Montserrat"
    		pos_hint: {'center_x': .5, 'center_y': .25}
    		md_bg_color: 235/255, 233/255, 187/255, 1

    	MDRaisedButton:
    		text: "Create New Account"
    		font_size: '15dp'
    		text_color: 0/255, 0/255, 0/255
    		padding: [27, 3]
    		font_name: "Montserrat"
    		pos_hint: {'center_x': .5, 'center_y': .18}
    		md_bg_color: 255/255, 222/255, 89/255, 1
    		on_release:
    			root.manager.transition.direction = "left"
    			root.manager.current = "Register_Screen"

