<AddPlanPage>:
	name: "AddPlan_Page"
	id: addplanpage
	MDFloatLayout:
		md_bg_color: 206/255, 229/255, 237/255, 1

		MDIconButton:
			icon: "keyboard-return"
			size_hint: 0.25, 0.25
			pos_hint: {'center_x': .89, 'center_y': 0.95}
			on_release:
				root.manager.current = "Tracker_Page"
				root.manager.transition.direction = "left"
		Image:
			source: "assets/tracker_1.png"
			size_hint: 0.15, 0.15
			pos_hint: {'center_x': .15, 'center_y': 0.93}
		Image:
			source: "assets/tracker_name.png"
			size_hint: 0.25, 0.25
			pos_hint: {'center_x': .37, 'center_y': 0.93}

		MDLabel:
			text: "Add Plan Transaction"
			pos_hint: {'center_x': 0.5, 'center_y': 0.8}
			halign: 'center'
			color: 255, 255, 255
			font_size: "25sp"
			font_name: "Poppins"

		MDTextFieldRound:
			id: Plan_Title
			hint_text: "Enter Plan Title"
			multiline: False
			mode: "rectangle"
			icon_left: "file"
			size_hint_x: None
			width: 200
			required: True
			max_text_length: 10
			helper_text: "Input New Unique Title"
			color_mode: 'primary'
			font_size: "13sp"
			sizehint: 0.8, 0.8
			pos_hint: {'center_x': 0.5, 'center_y': 0.68}
			line_color_normal : [58,144,198]
			multiline: False

		MDTextFieldRound:
			id: Plan_amount
			hint_text: "Enter Amount"
			input_type: 'number'
			multiline: False
			mode: "rectangle"
			icon_left: "calculator"
			size_hint_x: None
			width: 200
			required: True
			max_text_length: 10
			helper_text: "Amount: (No Decimal)"
			color_mode: 'primary'
			font_size: "13sp"
			pos_hint: {'center_x': 0.5, 'center_y': 0.53}
			line_color_normal : [58,144,198]

		MDLabel:
			id: date
			text: "Date of Transaction"
			halign: 'center'
			pos_hint: {'center_x': 0.5, 'center_y': 0.38}

		MDRectangleFlatButton:
			text: "Choose Date"
			theme_text_color: "Custom"
    		text_color: 255, 255, 255, 1
    		line_color: 68/255, 178/255, 221/255, 1
			padding: [75,10]
			pos_hint: {'center_x': 0.5, 'center_y': 0.30}
			on_release:
				app.show_date()

		MDRaisedButton:
	    	text: "Finish"
	    	font_size: "15sp"
	    	font_color: 1, 1, 1, 1
	    	font_name: "Poppins"
	    	padding: [35, 0]
	    	pos_hint: {'center_x': 0.29, 'center_y': 0.18}
	    	on_press: 
	    		app.planrec(Plan_Title.text, Plan_amount.text, date.text)
	    		app.clearwidg()
	    		app.TrackerBoxes()
	    		root.manager.transition.direction = 'right'

	    MDRaisedButton:
	    	text: "Cancel"
	    	font_size: "15sp"
	    	font_name: "Poppins"
	    	font_color: 255/255, 255/255, 225/255, 1
	    	padding: [35, 0]
	    	pos_hint: {'center_x': 0.7, 'center_y': 0.18}
	    	on_release: 
	    		app.clearwidg()
	    		app.TrackerBoxes()
	    		root.manager.transition.direction = 'left'
